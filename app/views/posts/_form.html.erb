<p><%= form_for @post do |f| %>
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list %><br>
    <%= f.label :author %>
    <%= f.text_field :author %><br>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label :content %>
    <%= f.bootsy_area :content, size: "100x30", editor_options: { html: true} %><br>
    <%= f.label :contentlong %>
    <%= f.bootsy_area :contentlong, size: "100x30", editor_options: { html: true} %><br>
    <%= f.submit "Submit" %>
<% end %></p>

