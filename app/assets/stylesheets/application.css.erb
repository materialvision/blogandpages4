/* @group Basics */

body {
	font-family:Helvetica,Arial,Verdana,sans-serif;
	line-height:1.3;

  font-size: 14px;
  text-align: center;
  /* IE Fix */
  margin: 0;
  padding: 0;
  background: #5a5a5a;
}

a img {
  border: none;
}

a {
  color:#299ECC;
	text-decoration: none;
}

a:hover {
color: #fff;
background-color: #ef4135;
}

.clear {
  overflow: hidden;
  clear:both;
	display:inline-block;
}

h1,h5,h6 {
	font-family:Helvetica,Arial,Verdana,"Lucida Grande",Georgia,sans-serif;
	font-weight:bold;
	line-height:1em;
	margin:0;
	padding:0;
}

h2 {
	color: #424242;
	font-size: 25px;
	font-weight:bold;
	line-height:1em;
	margin-top: 1px;
	text-transform:uppercase;
	padding-top: 10px;
}

h3 {
	color: #424242;
	float:left;
	font-size: 25px;
	font-weight:bold;
	padding:10px 0 13px;
	text-transform:uppercase;
}

h4 {
	color:#299ECC;
	font-size: 19px;
	font-weight:normal;
	line-height:1em;
	margin-top:1px;
	text-transform:uppercase;
}

/* @end */

#container {
	margin: 0 auto;
	padding: 25px 42px;
	background: #e6e6e6;
	width: 840px;
	border: 18px solid #fff;
	text-align: left;
	position: relative;
}

#loginlink {
	top: 0;
	left: 0;
	position: relative;
	text-align: center;
	font-size: 12px;
}
#loginlink a {
	font-size: 12px;
}

#flash_notice, #flash_error {
  padding: 5px 8px;
  margin: 10px 0;
}

#flash_notice {
  background-color: #CFC;
  border: solid 1px #6C6;
	position: relative;
	top: 7px;
}

#flash_error {
  background-color: #FCC;
  border: solid 1px #C66;
}

.fieldWithErrors {
  display: inline;
}

#errorExplanation {
  width: 400px;
  border: 2px solid #CF0000;
  padding: 0px;
  padding-bottom: 12px;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

#errorExplanation h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 5px 5px 15px;
  font-size: 12px;
  margin: 0;
  background-color: #c00;
  color: #fff;
}

#errorExplanation p {
  color: #333;
  margin-bottom: 0;
  padding: 8px;
}

#errorExplanation ul {
  margin: 2px 24px;
}

#errorExplanation ul li {
  font-size: 12px;
  list-style: disc;
}

/* @group posts */

#entries {
-moz-background-clip:border;
-moz-background-inline-policy:continuous;
-moz-background-origin:padding;
background:#FFFFFF none repeat scroll 0 0;
float:left;
width:789px;
	padding: 3px 16px 15px 35px;
}

#editform {
-moz-background-clip:border;
-moz-background-inline-policy:continuous;
-moz-background-origin:padding;
background: #FFFFFF none repeat scroll 0 0;
width:807px;
	padding: 15px 16px;
}

#form_content {
	position:relative;
	width:778px;
}

#post_title {
	color: #242424;
	text-decoration: none;
	font-weight: bold;
	width: 700px;
	margin-bottom: 25px;
	margin-left: 71px;
}

#post_content {
	float: right;
	position:relative;
	width:718px;
}

#loggedin {
	float:right;
	position:relative;
	width:718px;
}

#time_and_author {
	font-size: 11px;
	color: #95a8ac;
	float:right;
	position:relative;
	width:718px;
}

.dateheader {
	float:left;
	position:relative;
	width:789px;
}

.entrydate{
	line-height:1em;
	margin:0;
}

h3 span {
	font-size: 56px;
	padding-right:6px;
	position:relative;
	top:21px;
}

/* @end */

