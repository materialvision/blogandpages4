<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title>Eyes on your instruments</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>

 <script type="text/javascript">

		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-4586950-3']);
		  _gaq.push(['_trackPageview']);

		  (function() {
		    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		  })();

		</script>
  </head>
  <body>

    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a href="../" class="navbar-brand">Espen Sommer Eide</a>
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
          <ul class="nav navbar-nav">
            <li>
              <a href="../">news</a>
            </li>
            <li>
              <a href="../works">works</a>
            </li>
            <li>
              <a href="../bio">bio</a>
            </li>
            <li>
              <a href="../rss">rss</a>
            </li>

          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="login">login <span class="caret"></span></a>
              <ul class="dropdown-menu" aria-labelledby="login">

                <li><%= link_to "Log in", log_in_path %></li>
                <% if logged_in? %>
                <li><%= link_to "Log out", log_out_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Pages", pages_path %></li>
                <li class="divider"></li>
                <li><%= link_to "New user", signup_path %></li>
                <li><%= link_to "New page", new_page_path %></li>
                <li><%= link_to "New Post", new_post_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Update_cloud", calculate_importance_path %></li>
                <% end %>
              </ul>
            </li>

          </ul>

        </div>
      </div>
    </div>

    <div class="container">

      <div class="page-header" id="banner">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12">

            <%= render :partial => 'layouts/pages_navbar'%>

          </div>


        </div>

      </div>

      <div class="headerpadding">
		    <%- flash.each do |name, msg| -%>
	        <%= content_tag :div, msg, :id => "flash_#{name}" %>
	      <%- end -%>
			</div>

      <div class="bs-docs-section">
        <div class="row">

                <%= yield %>

        </div>
      </div>



      <div id="copyright">
		    <p>ESPEN SOMMER EIDE &copy;
			<%=Time.now.strftime("%Y")%></p>
		  </div> <!-- END COPYRIGHT -->
			</div>




    </div>




  </body>
</html>
