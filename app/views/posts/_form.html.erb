<p><%= form_for @post do |f| %>
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list %><br>
    <%= f.label :author %>
    <%= f.text_field :author %><br>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label :content %>
    <%= f.text_area :content, size: '50x10' %><br>
    <%= f.submit "Submit" %>
<% end %></p
