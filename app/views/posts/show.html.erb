<div class="col-lg-12 col-md-12 col-sm-12">
<div class="im-centered">
<h3 class="entrydate"><%= @post.created_at.strftime("%d") %><%= @post.created_at.strftime("%B%Y") %>
		<%= link_to @post.title, @post %></h3>
			<%=raw @post.content %>
</div><div class="im-centered">			
			<%=raw @post.contentlong %>
</div><div class="im-centered">
			Tags:
			<%@post.tags.each do |t|%>
			<%= link_to t, tagged_path(:tagg=>t.to_s)%>
			<%end%><br>
</div><div class="im-centered">
			<p>
			<% if logged_in? %>
			  <%= link_to "Edit", edit_post_path(@post) %> |
			  <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
			<%end%>
			  <%= link_to "Back to blog", posts_path %>
			</p>
</div>
&nbsp;
